{
  "name": "@sanity/preview-kit",
  "version": "1.5.4",
  "description": "General purpose live previews, like next-sanity",
  "keywords": [
    "sanity",
    "sanity.io",
    "next.js",
    "studio",
    "react",
    "preview",
    "groq",
    "live"
  ],
  "homepage": "https://github.com/sanity-io/preview-kit#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/preview-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/preview-kit.git",
    "directory": "packages/preview-kit"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "require": "./dist/index.cjs",
      "node": {
        "import": "./dist/index.cjs.js",
        "require": "./dist/index.cjs"
      },
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "source": "./src/client/index.ts",
      "require": "./dist/client.cjs",
      "node": {
        "import": "./dist/client.cjs.js",
        "require": "./dist/client.cjs"
      },
      "import": "./dist/client.js",
      "default": "./dist/client.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "src",
    "client.js"
  ],
  "scripts": {
    "prebuild": "rimraf dist coverage",
    "build": "pkg build --strict && pkg --strict",
    "coverage": "vitest run --coverage",
    "lint": "eslint --max-warnings 0 .",
    "prepublishOnly": "pnpm run build",
    "release": "semantic-release || semantic-release --dry-run --debug",
    "test": "vitest",
    "pretest:esm": "pnpm run build",
    "test:esm": "node test.mjs && node test.cjs"
  },
  "browserslist": [
    "> 0.2% and supports es6-module and supports es6-module-dynamic-import and not dead and not IE 11",
    "maintained node versions"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@sanity/client": "^6.1.1",
    "@sanity/eventsource": "^5.0.0",
    "@sanity/groq-store": "^2.1.0",
    "@vercel/stega": "^0.0.5",
    "lodash.isplainobject": "^4.0.6",
    "suspend-react": "^0.0.10",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^13.4.0",
    "@sanity/pkg-utils": "^2.2.14",
    "@sanity/semantic-release-preset": "^4.1.1",
    "@types/lodash.isplainobject": "^4.0.7",
    "@types/node": "^18.16.3",
    "@types/react": "^18.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@vitest/coverage-c8": "^0.31.0",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-sanity": "^6.0.0",
    "eslint-gitignore": "^0.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.0",
    "semantic-release": "^21.0.2",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}
