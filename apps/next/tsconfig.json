{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
