{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["RUNNER_OS", "NODE_VERSION", "VARIANT"],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "public/**"
      ],
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:esm": {
      "cache": false
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
